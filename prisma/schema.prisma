// Prisma schema for 공연 예약 웹

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleType {
  USER
  STAFF
  ADMIN
  SUPER_ADMIN
}

enum RoleRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ReservationStatus {
  REQUESTED
  PAYMENT_PENDING
  CONFIRMED
  CANCELLED
  EXPIRED
  REFUND_REQUESTED
  REFUND_PENDING
  REFUNDED
}

enum TicketStatus {
  ACTIVE
  REVOKED
}

enum RefundStatus {
  REQUESTED
  PENDING
  REFUNDED
}

enum PaymentReviewStatus {
  NONE
  CHECKING
  HOLD
  DONE
}

enum TicketTemplateScope {
  GLOBAL
  SHOW
  SESSION
}

model User {
  id        String   @id @default(cuid())
  kakaoId   String?  @unique
  name      String?
  nickname  String?
  email     String?  @unique
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roles                UserRole[]
  roleRequests         RoleRequest[]
  handledRoleRequests  RoleRequest[] @relation("HandledBy")
  reservations         Reservation[]
  tickets              Ticket[]
  photoPosts           PhotoPost[]
  auditLogs            AuditLog[] @relation("AuditUser")
  accounts             Account[]
  sessions             Session[]
}

model Role {
  id   String   @id @default(cuid())
  type RoleType @unique
  userRoles UserRole[]
}

model UserRole {
  id        String   @id @default(cuid())
  userId    String
  roleId    String
  expiresAt DateTime?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  role Role @relation(fields: [roleId], references: [id])

  @@unique([userId, roleId, isActive])
}

model RoleRequest {
  id        String             @id @default(cuid())
  userId    String
  status    RoleRequestStatus  @default(PENDING)
  note      String?
  handledAt DateTime?
  handledByUserId String?
  createdAt DateTime @default(now())

  user      User @relation(fields: [userId], references: [id])
  handledBy User? @relation("HandledBy", fields: [handledByUserId], references: [id])
}

model Show {
  id          String        @id @default(cuid())
  title       String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  sessions ShowSession[]
}

model ShowSession {
  id            String       @id @default(cuid())
  showId        String
  title         String
  date          DateTime
  totalCapacity Int
  soldQty       Int          @default(0)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  show         Show        @relation(fields: [showId], references: [id])
  reservations Reservation[]
  recordPost   RecordPost?
  photoPosts   PhotoPost[]
}

model Reservation {
  id        String             @id @default(cuid())
  userId    String
  sessionId String
  qty       Int
  status    ReservationStatus  @default(REQUESTED)
  paymentMarkedAt DateTime?
  expiresAt DateTime
  paymentReviewStatus PaymentReviewStatus @default(NONE)
  paymentNote String?
  paymentReviewedByUserId String?
  paymentReviewedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  session ShowSession @relation(fields: [sessionId], references: [id])
  ticket Ticket?
  refund Refund?
}

model Ticket {
  id             String       @id @default(cuid())
  reservationId  String       @unique
  qrToken        String       @unique
  status         TicketStatus @default(ACTIVE)
  createdAt      DateTime     @default(now())

  reservation Reservation @relation(fields: [reservationId], references: [id])
  checkIn     CheckIn?
}

model CheckIn {
  id        String   @id @default(cuid())
  ticketId  String   @unique
  createdAt DateTime @default(now())

  ticket Ticket @relation(fields: [ticketId], references: [id])
}

model Refund {
  id            String       @id @default(cuid())
  reservationId String       @unique
  status        RefundStatus @default(REQUESTED)
  createdAt     DateTime     @default(now())

  reservation  Reservation @relation(fields: [reservationId], references: [id])
  account      RefundAccount?
}

model RefundAccount {
  id            String   @id @default(cuid())
  refundId      String   @unique
  bankName      String
  accountNumber String
  holderName    String
  createdAt     DateTime @default(now())

  refund Refund @relation(fields: [refundId], references: [id])
}

model RecordPost {
  id        String   @id @default(cuid())
  sessionId String   @unique
  title     String
  content   String
  participants String?
  setlist     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  session ShowSession @relation(fields: [sessionId], references: [id])
}

model PhotoPost {
  id        String   @id @default(cuid())
  sessionId String?
  title     String
  description String?
  createdByUserId String?
  createdAt DateTime @default(now())

  session   ShowSession? @relation(fields: [sessionId], references: [id])
  createdBy User?        @relation(fields: [createdByUserId], references: [id])
  assets    PhotoAsset[]
}

model PhotoAsset {
  id          String   @id @default(cuid())
  photoPostId String
  url         String

  photoPost PhotoPost @relation(fields: [photoPostId], references: [id])
}

model TicketTemplate {
  id        String              @id @default(cuid())
  scope     TicketTemplateScope
  showId    String?
  sessionId String?
  imageUrl  String
  createdAt DateTime @default(now())
}

model AuditLog {
  id         String   @id @default(cuid())
  action     String
  entityType String
  entityId   String
  actorUserId String?
  beforeJson Json?
  afterJson  Json?
  createdAt  DateTime @default(now())
  ipAddress  String?
  userAgent  String?

  actorUser User? @relation("AuditUser", fields: [actorUserId], references: [id])
}

// NextAuth standard models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}
